                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/subtitlebg6Main"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
